---
const videos = [
  {
    id: "7_cPxa_VrUA",
    title: "Showreel 2025",
    subtitle: "Highlights",
    thumbnail: `https://img.youtube.com/vi/7_cPxa_VrUA/maxresdefault.jpg`
  },
  {
    id: "6XhBUA2cDzM",
    title: "Tapomita & Maximillian",
    subtitle: "Bröllopsfilm",
    thumbnail: `https://img.youtube.com/vi/6XhBUA2cDzM/maxresdefault.jpg`
  },
  {
    id: "gZQ1a2vhm-o",
    title: "Johanna 2025",
    subtitle: "Bröllopsfilm",
    thumbnail: `https://img.youtube.com/vi/gZQ1a2vhm-o/maxresdefault.jpg`
  }
];
---

<section id="portfolio" class="portfolio">
  <div class="container">
    <div class="section-header">
      <p class="section-label">Portfolio</p>
      <h2 class="section-title">Utvalda filmer</h2>
    </div>

    <div class="video-grid">
      {videos.map((video) => (
        <a 
          href={`https://www.youtube.com/watch?v=${video.id}`}
          target="_blank"
          rel="noopener noreferrer"
          class="video-card"
          data-video-id={video.id}
        >
          <div class="video-thumbnail">
            <img 
              src={video.thumbnail} 
              alt={video.title}
              loading="lazy"
            />
            <div class="video-overlay">
              <div class="play-button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M8 5.14v14.72a1 1 0 001.5.86l11-7.36a1 1 0 000-1.72l-11-7.36a1 1 0 00-1.5.86z" fill="currentColor"/>
                </svg>
              </div>
            </div>
          </div>
          <div class="video-info">
            <h3 class="video-title">{video.title}</h3>
            <p class="video-subtitle">{video.subtitle}</p>
          </div>
        </a>
      ))}
    </div>

    <div class="portfolio-cta">
      <a 
        href="https://www.instagram.com/rappholtphoto/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="instagram-link"
      >
        <span>Mer på Instagram</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .portfolio {
    padding: 120px 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-label {
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-accent);
    margin-bottom: 16px;
  }

  .section-title {
    font-size: clamp(36px, 5vw, 56px);
    font-weight: 400;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .video-card {
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background: var(--color-bg-elevated);
    transition: transform 0.3s ease;
  }

  .video-card:hover {
    transform: translateY(-8px);
  }

  .video-thumbnail {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .video-card:hover .video-thumbnail img {
    transform: scale(1.05);
  }

  .video-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .video-card:hover .video-overlay {
    opacity: 1;
  }

  .play-button {
    width: 64px;
    height: 64px;
    background: var(--color-text);
    color: var(--color-bg);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: scale(0.8);
    transition: transform 0.3s ease;
  }

  .video-card:hover .play-button {
    transform: scale(1);
  }

  .video-info {
    padding: 20px;
  }

  .video-title {
    font-family: var(--font-body);
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 4px;
  }

  .video-subtitle {
    font-size: 14px;
    color: var(--color-text-muted);
  }

  .portfolio-cta {
    margin-top: 60px;
    text-align: center;
  }

  .instagram-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: color 0.2s ease;
  }

  .instagram-link:hover {
    color: var(--color-text);
  }

  @media (max-width: 1024px) {
    .video-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .portfolio {
      padding: 80px 0;
    }

    .video-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
