---
const navItems = [
  { href: "/portfolio", label: "Portfolio" },
  { href: "/paket", label: "Paket" },
  { href: "/utrustning", label: "Utrustning" },
  { href: "/om-mig", label: "Om Mig" },
  { href: "/kontakt", label: "Kontakt" },
];
---

<header class="header">
  <nav class="nav container">
    <a href="/" class="logo">
      <img src="/logo.png" alt="Rappholt Photo" class="logo-img" />
    </a>

    <a href="tel:+46708588963" class="nav-cta desktop-cta">
      Boka samtal
    </a>

    <button class="mobile-menu-btn" id="menuBtn" aria-label="Meny">
      <span></span>
      <span></span>
    </button>
  </nav>
</header>

<!-- Mobilmeny som overlay utanför header -->
<div class="mobile-overlay" id="mobileOverlay">
  <ul class="mobile-nav-links">
    {navItems.map((item) => (
      <li>
        <a href={item.href} class="mobile-nav-link">{item.label}</a>
      </li>
    ))}
    <li class="mobile-cta-item">
      <a href="tel:+46708588963" class="nav-cta">Boka samtal</a>
    </li>
  </ul>
</div>

<!-- Desktop nav-links i headern -->
<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 200;
    padding: 20px 0;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-img {
    height: 40px;
    width: auto;
  }

  .nav-cta {
    font-size: 14px;
    font-weight: 500;
    padding: 12px 24px;
    background: var(--color-text);
    color: var(--color-bg);
    border-radius: 4px;
    transition: opacity 0.2s ease;
    text-decoration: none;
  }

  .nav-cta:hover {
    opacity: 0.9;
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 300;
  }

  .mobile-menu-btn span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .mobile-menu-btn.open span:first-child {
    transform: translateY(4px) rotate(45deg);
  }

  .mobile-menu-btn.open span:last-child {
    transform: translateY(-4px) rotate(-45deg);
  }

  /* Mobile overlay */
  .mobile-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #0a0a0a;
    z-index: 150;
    justify-content: center;
    align-items: center;
  }

  .mobile-overlay.open {
    display: flex;
  }

  .mobile-nav-links {
    list-style: none;
    text-align: center;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 36px;
  }

  .mobile-nav-link {
    font-size: 22px;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .mobile-nav-link:hover {
    color: var(--color-text);
  }

  .mobile-cta-item {
    margin-top: 20px;
  }

  /* Desktop: visa inline nav-links i headern */
  @media (min-width: 769px) {
    .header .nav {
      display: flex;
    }

    /* Lägg till desktop-links direkt efter logo */
    .header .nav::after {
      content: none;
    }

    .mobile-overlay {
      display: none !important;
    }
  }

  @media (max-width: 768px) {
    .desktop-cta {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }
</style>

<!-- Desktop nav-links renderas separat för att undvika mobilproblem -->
<style>
  .desktop-nav {
    display: flex;
    gap: 40px;
    list-style: none;
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 201;
    padding: 0;
    margin: 0;
  }

  .desktop-nav .nav-link {
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    transition: color 0.2s ease;
    text-decoration: none;
  }

  .desktop-nav .nav-link:hover {
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
  }
</style>

<ul class="desktop-nav">
  {navItems.map((item) => (
    <li>
      <a href={item.href} class="nav-link">{item.label}</a>
    </li>
  ))}
</ul>

<script>
  const menuBtn = document.getElementById('menuBtn');
  const mobileOverlay = document.getElementById('mobileOverlay');

  menuBtn.addEventListener('click', () => {
    mobileOverlay.classList.toggle('open');
    menuBtn.classList.toggle('open');
    document.body.style.overflow = mobileOverlay.classList.contains('open') ? 'hidden' : '';
  });

  mobileOverlay.querySelectorAll('.mobile-nav-link, .nav-cta').forEach(link => {
    link.addEventListener('click', () => {
      mobileOverlay.classList.remove('open');
      menuBtn.classList.remove('open');
      document.body.style.overflow = '';
    });
  });
</script>
